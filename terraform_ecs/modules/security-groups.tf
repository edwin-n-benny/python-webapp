# security-groups.tf
resource "aws_security_group" "ecs_service_sg" {
  depends_on = [ aws_vpc.main ]
  name        = "ecs-service-sg"
  description = "Allow traffic for ECS service"
  vpc_id      = var.vpc_id

  ingress {
    from_port   = var.container_port
    to_port     = var.container_port
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name = "ecs-service-sg"
  }
}
